@model List<EmployeeManagementSystem.Models.Note>

@{
    ViewData["Title"] = "Notes Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Notes Management</h1>

<div class="row">
    <div class="col-md-6">
        <h2>All Notes</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Note ID</th>
                    <th>Title</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var note in Model)
                {
                    <tr>
                        <td>@note.NoteId</td>
                        <td>@note.Content</td>
                        <td>@note.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@note.NoteId" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h2>Add New Note</h2>
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoteId" class="control-label"></label>
                <textarea asp-for="NoteId" class="form-control"></textarea>
                <span asp-validation-for="NoteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Count > 0)
{
    <h2>Note Details</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model[0].NoteId</h5>
            <p class="card-text">@Model[0].Content</p>
            <p class="card-text"><small class="text-muted">Created At: @Model[0].CreatedAt.ToString("yyyy-MM-dd HH:mm")</small></p>
        </div>
    </div>
}
